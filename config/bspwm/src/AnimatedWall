#!/usr/bin/env bash

video_path="$2"

start() {
    if [[ ! "$video_path" =~ \.(mp4|mkv|gif)$ ]]; then
        echo "[-] The file does not have a valid video extension" >&2
        exit 1
    fi

    SCREENS=$(xrandr | grep -Eo '^[^ ]+ connected.*' | cut -d' ' -f1)
    
    # INFO: calculates the aspect ratio to force mpv when the video is in inappropriate resolution for the screen
    gcd() {
        local a=$1
        local b=$2
        while [ $b -ne 0 ]; do
            local temp=$b
            b=$((a % b))
            a=$temp
        done
        echo $a
    }

    # INFO: Loop through all connected screens
    for screen in $SCREENS; do
        resolution=$(xrandr | grep -A1 "^$screen" | grep '*' | awk '{print $1}')
        width=$(echo $resolution | cut -d'x' -f1)
        height=$(echo $resolution | cut -d'x' -f2)

        g=$(gcd $width $height)
        aspect_width=$((width / g))
        aspect_height=$((height / g))

        case "${aspect_width}:${aspect_height}" in
            "8:5") videoaspect="16:10" ;;
            "4:3") videoaspect="4:3" ;;
            "16:9") videoaspect="16:9" ;;
            "21:9") videoaspect="21:9" ;;
            *) videoaspect="${aspect_width}:${aspect_height}" ;;
        esac

        # INFO: for each screen, launch the video with the appropriate aspect ratio
        xwinwrap -g "$resolution" -un -fdt -ni -b -nf \
            -- mpv --hwdec=auto -vo x11 --no-audio --no-border --no-config \
            --no-window-dragging --no-input-default-bindings --no-osd-bar \
            --no-sub --loop -wid WID \
            --video-aspect-override="$videoaspect" --geometry="$resolution" --video-unscaled=no ${video_path} > /dev/null 2>&1 &
    done
}

stop() {
    killall xwinwrap > /dev/null 2>&1
}

print_help() {
    echo "Usage: AnimatedWall [--start] [--stop] \"video_path.mp4\""
    echo "--start Start playback of video file."
    echo "--stop Stop active playback."
}

if [ $# -eq 0 ]; then
    print_help
    exit 1
fi

while [[ "$#" -gt 0 ]]; do
    case $1 in
        --start) start; shift ;;
        --stop) stop; shift ;;
        *) echo "Unknown parameter: $1" ;;
    esac
    shift
done
