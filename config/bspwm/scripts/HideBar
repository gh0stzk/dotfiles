#!/usr/bin/env bash
#   Author: z0mbi3

function hide() {
	polybar-msg cmd hide | bspc config top_padding 2 | bspc config bottom_padding 2
}

function unhide() {
	polybar-msg cmd show | bspc config top_padding 48 | bspc config bottom_padding 48
}

case $1 in
	-h | --hide | hide)
		hide
		exit;;
	-u | --unhide | unhide)
		unhide
		exit;;
	*) # Invalid option
		echo "Error: Invalid option"
		exit;;
esac
